{
  "$schema": "https://biomejs.dev/schemas/2.3.0/schema.json",
  "files": {
    "ignore": ["node_modules", "dist", "coverage", "convex/_generated", ".tanstack", "public"]
  },
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded",
      "trailingCommas": "all"
    }
  }
}
